      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      gap: 1em;
    }
    .semestre {
      background: #ffffff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 1em;
      min-width: 220px;
      box-shadow: 2px 2px 6px rgba(0,0,0,0.1);
    }
    .semestre h2 {
      font-size: 1.2em;
      text-align: center;
      color: #4a7c59;
    }
    .materia {
      margin: 0.5em 0;
      padding: 0.5em;
      border-radius: 5px;
      background: #e6f2ec;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .materia.aprobada {
      background: #b2dfdb;
      text-decoration: line-through;
    }
    .materia.bloqueada {
      background: #f8d7da;
      cursor: not-allowed;
      position: relative;
    }
    .materia.bloqueada:hover::after {
      content: attr(data-tooltip);
      position: absolute;
